<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
  <%= link_to task_path(task) do %>
      <span><%= task.completed %></span> - <span><%= task.title %></span>
    <% end %>
    </li>
      -------
      <%= link_to "Delete", task_path(task.id), method: :delete, data: { confirm: " Delete #{task.title}"}   %>
  <% end %>
</ul>


<%= link_to "Add a new task", tasks_new_path %>
