<div class="container">
  <h1>My Tasks</h1>

  <ul>
    <% @tasks.each do |task| %>
      <li>
        <%= link_to task_path(task) do %>
          <span>
            <% if task.completed == false %>
              <%= icon('far', 'square') %>
            <% else %>
              <%= icon('far', 'check-square') %>
            <% end %>
          </span>
          <span><%= task.title %></span>
        <% end %>
        <%= link_to task_path(task.id), method: :delete, data: { confirm: " Delete #{task.title}"} do %>
          <%= icon('fas', 'trash-alt') %>
        <% end %>
      </li>
    <% end %>
  </ul>

  <%= link_to "Add a new task", new_task_path %>
</div>
